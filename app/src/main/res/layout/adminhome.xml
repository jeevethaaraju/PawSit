<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_sitterhome"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/drawable_shape">

    <!-- Background Ellipses -->
    <ImageView
        android:id="@+id/image_ellipse1"
        android:layout_width="445dp"
        android:layout_height="406dp"
        android:layout_marginLeft="-37dp"
        android:layout_marginTop="-210dp"
        android:layout_gravity="top|left"
        android:background="@drawable/drawable_shape_1"
        android:scaleType="centerInside" />

    <ImageView
        android:id="@+id/image_ellipse2"
        android:layout_width="342dp"
        android:layout_height="342dp"
        android:layout_marginLeft="207dp"
        android:layout_marginTop="-178dp"
        android:layout_gravity="top|left"
        android:background="@drawable/drawable_shape_2"
        android:scaleType="centerInside" />

    <!-- Profile Icon -->
    <ImageView
        android:id="@+id/profileicon"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="75dp"
        android:layout_gravity="top|left"
        android:scaleType="centerCrop"
        android:background="@drawable/circle_background"
        android:src="@drawable/adminicon"
        android:clipToOutline="true" />

    <!-- App Logo and Title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottie_logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:lottie_rawRes="@raw/pawanime"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:letterSpacing="0.05"
            android:padding="8dp"
            android:shadowColor="#66000000"
            android:layout_marginRight="50dp"
            android:shadowDx="1"
            android:shadowDy="2"
            android:shadowRadius="2"
            android:text="PawSit"
            android:textColor="#8B4513"
            android:textSize="32sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Welcome Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="139dp"
        android:layout_gravity="top|left"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="133dp"
        android:layout_marginRight="24dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="139dp"
            android:padding="16dp">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:layout_marginTop="40dp"
                android:text="TESTING"
                android:textColor="#FF141415"
                android:textSize="16sp" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottie_hi"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:lottie_rawRes="@raw/hi"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="19dp"
                android:text="Welcome Back,"
                android:textColor="#FF141415"
                android:textSize="20sp"
                android:textStyle="bold" />

            <View
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="#E0E0E0" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <!-- Dashboard Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="Overall Dashboard"
        android:textColor="#FF141415"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center" />

    <!-- Dashboard Cards -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dp"
        android:layout_marginHorizontal="16dp"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Row 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp"
            android:weightSum="2">

            <!-- Pet Owner Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/petowner_container"
                android:layout_width="0dp"
                android:layout_height="104dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/bgpet3" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:text="Pet Owner"
                        android:textColor="#FF141415"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/text_pet_owner_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="16dp"
                        android:layout_marginTop="25dp"
                        android:text="21"
                        android:textColor="#FFFF9500"
                        android:textSize="36sp" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!-- Pet Sitter Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/petsitter_container"
                android:layout_width="0dp"
                android:layout_height="104dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/bgpet3" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:text="Pet Sitter"
                        android:textColor="#FF141415"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/text_pet_sitter_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="16dp"
                        android:layout_marginTop="25dp"
                        android:text="19"
                        android:textColor="#FFFF9500"
                        android:textSize="36sp" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- Row 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <!-- Total Bookings Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/total_container"
                android:layout_width="0dp"
                android:layout_height="104dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/bgpet3" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:text="Total Completed Bookings"
                        android:textColor="#FF141415"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/text_total_bookings_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="16dp"
                        android:layout_marginTop="25dp"
                        android:text="35"
                        android:textColor="#FFFF9500"
                        android:textSize="36sp" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!-- Pending Bookings Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/pending_container"
                android:layout_width="0dp"
                android:layout_height="104dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/bgpet3" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:text="Pending Bookings"
                        android:textColor="#FF141415"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/text_pending_bookings_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="16dp"
                        android:layout_marginTop="25dp"
                        android:text="6"
                        android:textColor="#FFFF9500"
                        android:textSize="36sp" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>

    <!-- Bottom Navigation -->
    <include
        android:id="@+id/include_admin_bottom"
        layout="@layout/admin_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom" />

</FrameLayout>