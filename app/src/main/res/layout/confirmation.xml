<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container_confirmation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9FAFB"
    android:padding="24dp">

    <!-- Top Bar with Back Button and Title -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_gravity="top"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:gravity="center_vertical"
        android:background="@android:color/transparent">

        <ImageView
            android:id="@+id/img_back_top"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/back_arrow"
            android:contentDescription="Back"
            android:tint="#181D27"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:padding="4dp" />

        <TextView
            android:id="@+id/text_title_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirmation"
            android:textSize="20sp"
            android:textColor="#181D27"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <!-- Gradient background -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_gradient" />

    <!-- Background Ellipses (optional, subtle) -->
    <ImageView
        android:id="@+id/img_ellipse"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="-60dp"
        android:layout_marginTop="-60dp"
        android:layout_gravity="top|start"
        android:alpha="0.1" />

    <ImageView
        android:id="@+id/img_ellipse1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="top|start"
        android:scaleType="centerInside"
        android:alpha="0.1" />

    <!-- Main Content Container with shadow -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_card"
        android:padding="24dp"
        android:clipToPadding="false"
        android:layout_gravity="center">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="16dp">

            <ImageView
                android:id="@+id/img_arrow_left"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/back_arrow"
                android:contentDescription="Back"
                android:tint="#FF6200EE" />

            <TextView
                android:id="@+id/text_booking_confirmation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Booking Confirmation"
                android:textColor="#FF181D27"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EEE"
            android:layout_marginBottom="24dp" />

        <!-- Booking With -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="12dp">

            <TextView
                android:id="@+id/text_booking_with"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Booking with:"
                android:textColor="#FF181D27"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_lina_amane"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Lina Amane"
                android:textColor="#FF181D27"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- From Date & Time -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/text_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="From:"
                android:textColor="#FF181D27"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_from_date_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="23/5/2025"
                android:textColor="#FF181D27"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/text_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Time:"
                android:textColor="#FF181D27"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_from_time_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="9am"
                android:textColor="#FF181D27"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- To Date & Time -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="12dp">

            <TextView
                android:id="@+id/text_to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="To:"
                android:textColor="#FF181D27"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_to_date_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="23/5/2025"
                android:textColor="#FF181D27"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/text_time1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Time:"
                android:textColor="#FF181D27"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_to_time_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="9am"
                android:textColor="#FF181D27"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Selected Pets -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="12dp">

            <TextView
                android:id="@+id/text_selected_pets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selected Pets:"
                android:textColor="#FF181D27"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_ricky_zon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Ricky, zon"
                android:textColor="#FF181D27"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="12dp">

            <TextView
                android:id="@+id/text_selected_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selected Type:"
                android:textColor="#FF181D27"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_ricky_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Ricky, zon"
                android:textColor="#FF181D27"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Price -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="12dp">

            <TextView
                android:id="@+id/text_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price:"
                android:textColor="#FF181D27"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_price_per_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="RM100/day"
                android:textColor="#FF181D27"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Total -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="24dp">

            <TextView
                android:id="@+id/text_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total:"
                android:textColor="#FF6200EE"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_total_price_per_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="RM100"
                android:textColor="#FF6200EE"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Pay Now Button -->
        <TextView
            android:id="@+id/text_pay_now"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center"
            android:background="@drawable/img_rectangle"
            android:text="PAY NOW"
            android:textColor="#FFFF9500"
            android:textSize="18sp"
            android:textStyle="bold"
            android:letterSpacing="0.05"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>

    <include
        android:id="@+id/bottomNav"
        layout="@layout/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom" />

</FrameLayout>
