<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/container_root">

    <ImageView
        android:id="@+id/image_main"
        android:layout_width="match_parent"
        android:layout_marginBottom="200dp"
        android:layout_height="403.91dp"
        android:layout_marginLeft="0.15dp"
        android:scaleType="centerCrop"
        android:src="@drawable/cat" />



    <LinearLayout
        android:id="@+id/container_description_card"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_gravity="bottom|center_horizontal"
        android:background="@drawable/container_description_card"
        android:gravity="left|top"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/container_frame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="26.27dp"
            android:paddingLeft="21.89dp"
            android:paddingRight="21.89dp"
            android:paddingTop="43.78dp">

            <LinearLayout
                android:id="@+id/container_scroll_circles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image_scroll_circle"
                    android:layout_width="7.52dp"
                    android:layout_height="7.52dp"
                    android:background="@drawable/image_scroll_circle1"
                    android:scaleType="centerInside" />

                <ImageView
                    android:id="@+id/image_scroll_circle1"
                    android:layout_width="7.52dp"
                    android:layout_height="7.52dp"
                    android:layout_marginLeft="8.76dp"
                    android:background="@drawable/image_scroll_circle2"
                    android:scaleType="centerInside" />

                <ImageView
                    android:id="@+id/image_scroll_circle2"
                    android:layout_width="7.52dp"
                    android:layout_height="7.52dp"
                    android:layout_marginLeft="8.76dp"
                    android:background="@drawable/image_scroll_circle2"
                    android:scaleType="centerInside" />
            </LinearLayout>

            <TextView
                android:id="@+id/text_pet_care_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="26.27dp"
                android:gravity="center_horizontal|top"
                android:includeFontPadding="false"
                android:lineHeight="39.41dp"
                android:text="Pet Care In Your Neighbourhood"
                android:textColor="#FF141415"
                android:textSize="26.27dp" />

            <TextView
                android:id="@+id/text_pet_care_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8.76dp"
                android:gravity="center_horizontal|top"
                android:includeFontPadding="false"
                android:lineHeight="26.27dp"
                android:text="Connect with trusted pet caregivers near you for boarding, walking, house sitting, or day careâ€”exclusively for dogs &amp; cats!"
                android:textColor="#FFA1A1A1"
                android:textSize="17.51dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/container_btn_group"
            android:layout_width="match_parent"
            android:layout_height="134dp"
            android:background="@drawable/container_btn_group"
            android:gravity="center_horizontal|top"
            android:orientation="vertical"
            android:paddingLeft="21.89dp"
            android:paddingTop="17.51dp"
            android:paddingRight="21.89dp"
            android:paddingBottom="35.03dp">

            <LinearLayout
                android:id="@+id/container_btn"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/container_btn"
                android:clipToPadding="false"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="26.27dp"
                android:paddingTop="15.32dp"
                android:paddingRight="26.27dp"
                android:paddingBottom="14.23dp">

                <TextView
                    android:id="@+id/text_btn_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|center_vertical"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="Next"
                    android:textColor="#FFFFFFFF"
                    android:textSize="17.51dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
