<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginTop="16dp"
    android:background="@drawable/bg_white_with_shadow"
    android:elevation="4dp"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/circle_background"
            android:src="@drawable/icon"
            android:clipToOutline="true" />
        <!-- Complaint ID -->
        <TextView
            android:id="@+id/text_petsitter_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pet Sitter ID: 123"
            android:textSize="16sp"
            android:textColor="#000000"
            android:textStyle="bold" />

        <!-- Booking ID -->
        <TextView
            android:id="@+id/text_First_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="First Name: Sugi"
            android:textSize="14sp"
            android:textColor="#444444"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/text_Last_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last Name: Sugi"
            android:textSize="14sp"
            android:textColor="#444444"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/text_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender: Female"
            android:textSize="14sp"
            android:textColor="#444444"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/text_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone Number: 0134351022"
            android:textSize="14sp"
            android:textColor="#444444"
            android:layout_marginTop="4dp" />
        <!-- Created At -->
        <TextView
            android:id="@+id/Email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email:jee@gmail.com"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginTop="4dp" />
        <TextView
            android:id="@+id/Location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location:29,jln beringin 8,taman rinting,81750,masai,johor"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginTop="4dp" />

    </LinearLayout>
</FrameLayout>
