<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Google Map Fragment -->
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Header with back button and title -->
    <FrameLayout
        android:id="@+id/container_nav_header"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:background="@android:color/white"
        android:elevation="4dp">

        <ImageView
            android:id="@+id/image_arrow_left"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginLeft="22dp"
            android:layout_gravity="center_vertical|left"
            android:scaleType="centerInside"
            android:src="@drawable/back_arrow" />

        <TextView
            android:id="@+id/text_nav_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Pet Sitters Near You"
            android:textColor="#FF141415"
            android:textSize="18sp" />
    </FrameLayout>

    <!-- Bottom card for selected pet sitter (above bottom nav) -->
    <FrameLayout
        android:id="@+id/container_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/bottomNav"
        android:layout_margin="16dp"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/drawable_shape"
        android:elevation="8dp">

        <LinearLayout
            android:id="@+id/sitter_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/service_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lina Amane"
                    android:textColor="#FF141415"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/image_location_icon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_location" />

                    <TextView
                        android:id="@+id/text_distance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:text="1.2 km away from you"
                        android:textColor="#FF5F5F63"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="end">

                <TextView
                    android:id="@+id/service_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RM 20/day"
                    android:textColor="#FF141415"
                    android:textSize="15sp" />

                <!-- Pet type filter buttons inside card -->
                <LinearLayout
                    android:id="@+id/container_pet_filters"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:padding="6dp"
                    android:elevation="4dp">

                    <ImageView
                        android:id="@+id/caticon"
                        android:layout_width="36dp"
                        android:layout_height="32dp"
                        android:layout_marginEnd="6dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/caticon" />

                    <ImageView
                        android:id="@+id/dogicon"
                        android:layout_width="36dp"
                        android:layout_height="32dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/dogicon" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

    <!-- Bottom navigation - Replaced with include tag but maintaining same visual design -->
    <include
        android:id="@+id/bottomNav"
        layout="@layout/bottom"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/drawable_shape_4"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"/>
</RelativeLayout>