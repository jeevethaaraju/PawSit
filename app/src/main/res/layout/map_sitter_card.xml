<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="16dp"
    android:orientation="horizontal"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/service_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lina Amane"
            android:textColor="#FF141415"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_location_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_location" />

            <TextView
                android:id="@+id/text_distance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="1.2 km away from you"
                android:textColor="#FF5F5F63"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="end">

        <TextView
            android:id="@+id/service_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RM 20/day"
            android:textColor="#FF141415"
            android:textSize="15sp" />

        <LinearLayout
            android:id="@+id/container_pet_filters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:padding="6dp"
            android:elevation="4dp">

            <ImageView
                android:id="@+id/caticon"
                android:layout_width="36dp"
                android:layout_height="32dp"
                android:layout_marginEnd="6dp"
                android:scaleType="centerInside"
                android:src="@drawable/caticon" />

            <ImageView
                android:id="@+id/dogicon"
                android:layout_width="36dp"
                android:layout_height="32dp"
                android:scaleType="centerInside"
                android:src="@drawable/dogicon" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>