<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/drawable_shape">

    <!-- Background Elements (unchanged) -->
    <ImageView
        android:layout_width="445dp"
        android:layout_height="406dp"
        android:layout_marginLeft="-37dp"
        android:layout_marginTop="-210dp"
        android:layout_gravity="top|left"
        android:background="@drawable/drawable_shape_1"
        android:scaleType="centerInside" />

    <ImageView
        android:layout_width="342dp"
        android:layout_height="342dp"
        android:layout_marginLeft="207dp"
        android:layout_marginTop="-178dp"
        android:layout_gravity="top|left"
        android:background="@drawable/drawable_shape_2"
        android:scaleType="centerInside" />

    <!-- Role Picture (unchanged) -->
    <ImageView
        android:layout_width="304dp"
        android:layout_height="340dp"
        android:layout_marginLeft="61dp"
        android:layout_marginTop="104dp"
        android:layout_gravity="top|left"
        android:scaleType="centerInside"
        android:src="@drawable/rolepic" />

    <!-- Title Text (unchanged) -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginLeft="39dp"
        android:layout_marginTop="451dp"
        android:layout_gravity="top|left"
        android:gravity="left|center_vertical"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:singleLine="true"
        android:text="Choose your role"
        android:textColor="#FF000000"
        android:textSize="24sp" />

    <!-- Pet Owner Button - Now with equal padding -->
    <Button
        android:id="@+id/btn_pet_owner"
        android:layout_width="290dp"
        android:layout_height="48dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="541dp"
        android:layout_gravity="top|center_horizontal"
        android:text="Pet Owner"
        android:textColor="#FFFFFFFF"
        android:background="@drawable/drawable_shape_4"
        android:textSize="18sp"/>

    <!-- Pet Sitter Button - Now with equal padding -->
    <Button
        android:id="@+id/btn_pet_sitter"
        android:layout_width="290dp"
        android:layout_height="48dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="605dp"
        android:layout_gravity="top|center_horizontal"
        android:text="Pet Sitter"
        android:textColor="#FFFFFFFF"
        android:background="@drawable/drawable_shape_4"
        android:textSize="18sp"/>

    <Button
        android:id="@+id/btn_pet_admin"
        android:layout_width="290dp"
        android:layout_height="48dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="670dp"
        android:layout_gravity="top|center_horizontal"
        android:text="Admin"
        android:textColor="#FFFFFFFF"
        android:background="@drawable/drawable_shape_4"
        android:textSize="18sp"/>





</FrameLayout>