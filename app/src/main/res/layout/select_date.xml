<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Main Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomNav"
        android:fillViewport="true"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Back button and header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/back_arrow"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/back_arrow"
                    android:contentDescription="Back"
                    android:padding="4dp" />

                <TextView
                    android:id="@+id/header_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Select Date Range"
                    android:textSize="24sp"
                    android:textColor="#222222"
                    android:textStyle="bold"
                    android:paddingStart="16dp" />
            </LinearLayout>

            <!-- Spacer -->
            <View
                android:layout_width="match_parent"
                android:layout_height="24dp" />

            <!-- From Date -->
            <LinearLayout
                android:id="@+id/container_from_date"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/bg_input_box"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/text_from_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="From Date"
                    android:textColor="#666666"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/img_calendar1"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/calender"
                    android:contentDescription="Select From Date" />
            </LinearLayout>

            <!-- Spacer -->
            <View
                android:layout_width="match_parent"
                android:layout_height="16dp" />

            <!-- To Date -->
            <LinearLayout
                android:id="@+id/container_to_date"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/bg_input_box"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/text_to_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="To Date"
                    android:textColor="#666666"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/img_calendar2"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/calender"
                    android:contentDescription="Select To Date" />
            </LinearLayout>

            <!-- Spacer -->
            <View
                android:layout_width="match_parent"
                android:layout_height="16dp" />

            <!-- From Time -->
            <LinearLayout
                android:id="@+id/container_from_time"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/bg_input_box"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/text_from_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="From Time"
                    android:textColor="#666666"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/img_clock1"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/clock"
                    android:contentDescription="Select From Time" />
            </LinearLayout>

            <!-- Spacer -->
            <View
                android:layout_width="match_parent"
                android:layout_height="16dp" />

            <!-- To Time -->
            <LinearLayout
                android:id="@+id/container_to_time"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/bg_input_box"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/text_to_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="To Time"
                    android:textColor="#666666"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/img_clock2"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/clock"
                    android:contentDescription="Select To Time" />
            </LinearLayout>

            <!-- Spacer -->
            <View
                android:layout_width="match_parent"
                android:layout_height="32dp" />

            <!-- Book Now button -->
            <Button
                android:id="@+id/button_book_now"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="BOOK NOW"
                android:textAllCaps="true"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:backgroundTint="#FFD580"
                android:elevation="4dp"
                android:letterSpacing="0.05" />
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <include
        android:id="@+id/bottomNav"
        layout="@layout/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />
</RelativeLayout>