<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/drawable_shape">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="16dp">

        <!-- Header Section -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <ImageView
                android:id="@+id/image_arrow_left"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/back_arrow" />

            <TextView
                android:id="@+id/text_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Profile"
                android:textColor="#FF181D27"
                android:textSize="16sp" />
        </RelativeLayout>

        <!-- Profile Image Section -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp">

            <ImageView
                android:id="@+id/container_group3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/icon"
                android:background="@drawable/circle"
                android:clipToOutline="true"
                android:scaleType="centerCrop"/>

            <ImageView
                android:id="@+id/image_pencil_simple"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignEnd="@id/container_group3"
                android:layout_alignBottom="@id/container_group3"
                android:src="@drawable/edit_icon"/>
        </RelativeLayout>

        <!-- User Info Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/text_full_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Itunuoluwa Abidoye"
                android:textColor="#FF181D27"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/text_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Itunuoluwa@petra.africa"
                android:textColor="#FFABABAB"
                android:textSize="14sp"/>
        </LinearLayout>

        <!-- Input Fields Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="32dp">

            <!-- First Name -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="First Name"
                    android:textColor="#FF6D6A6A"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp"/>

                <EditText
                    android:id="@+id/text_first_name"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/drawable_shape_5"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:hint="Enter your first name"
                    android:textColor="#FF181D27"
                    android:textSize="15sp"/>
            </LinearLayout>

            <!-- Last Name -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Last Name"
                    android:textColor="#FF6D6A6A"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp"/>

                <EditText
                    android:id="@+id/text_last_name"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/drawable_shape_5"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:hint="Enter your last name"
                    android:textColor="#FF181D27"
                    android:textSize="15sp"/>
            </LinearLayout>

            <!-- Phone Number -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone Number"
                    android:textColor="#FF6D6A6A"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp"/>

                <EditText
                    android:id="@+id/edit_phone"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/drawable_shape_5"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:hint="Enter your phone number"
                    android:inputType="phone"
                    android:textColor="#FF181D27"
                    android:textSize="15sp"/>
            </LinearLayout>

            <!-- Gender -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gender"
                    android:textColor="#FF6D6A6A"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp"/>

                <Spinner
                    android:id="@+id/gender_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/drawable_shape_5"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"/>
            </LinearLayout>

            <!-- Date of Birth -->
            <RelativeLayout
                android:id="@+id/container_frame4"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/drawable_shape_5">

                <EditText
                    android:id="@+id/text_date_of_birth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"
                    android:includeFontPadding="false"
                    android:text="What's your date of birth?"
                    android:textColor="#FF6D6A6A"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/image_calendar"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/calender" />
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address"
                android:textColor="#FF181D27"
                android:textSize="14sp"
                android:layout_marginBottom="4dp"/>

            <RelativeLayout
                android:id="@+id/container_frame7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/drawable_shape_5">

                <EditText
                    android:id="@+id/text_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"
                    android:includeFontPadding="false"
                    android:text="What's your location?"
                    android:textColor="#FF6D6A6A"
                    android:textSize="15sp" />
            </RelativeLayout>
        </LinearLayout>

        <!-- Update Button -->
        <Button
            android:id="@+id/container_button"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            android:background="@drawable/img_rectangle"
            android:text="Update Profile"
            android:textColor="@color/white"
            android:textSize="16sp"/>
    </LinearLayout>
</ScrollView>